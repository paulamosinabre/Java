import java.util.*;
public class Main {
    
    public static int add (int num){
        if(num == 1){
            return num;
        } else {
            return num + add(num-1);
        }
    }
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        
        System.out.print("Enter a number: ");
        int num = scan.nextInt();
        System.out.print("Sum: " + add(num));
    }
}
