    private void btnApplyActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String r = txtRed.getText();
        String g = txtGreen.getText();
        String b = txtBlue.getText();
        
        String color = "%" + r + g + b;
        
        pnlResult.setBackground(Color.decode(color));
    }                                        

   
    
