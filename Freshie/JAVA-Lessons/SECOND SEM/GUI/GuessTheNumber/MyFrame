    private void imgRockMousePressed(java.awt.event.MouseEvent evt) {                                     
        // TODO add your handling code here:
        userPick = 1;
    }                                    

    private void imgPaperMouseClicked(java.awt.event.MouseEvent evt) {                                      
        // TODO add your handling code here:
        userPick = 2; 
    }                                     

    private void imgScissorsMouseClicked(java.awt.event.MouseEvent evt) {                                         
        // TODO add your handling code here:
        userPick = 3;
    }                                        
    
  
    private void computerGenerator(){
        int diff = 3 - 2 + 1;
        random = (int) Math.random() * diff + 1;
        
        //display image of pick
        if(random == 1){
             imgComp.setText("Rock");
        } else if(random == 2){
            imgComp.setText("Paper");
        } else {
             imgComp.setText("Scissor");
        }
    }
    
    private void winOrLose(){
        if(userPick == random){
            lblResult.setText("Draw");
        } else if (userPick == 1 && random == 2){
            lblResult.setText("You Lose!");
        } else if (userPick == 1 && random == 3){
            lblResult.setText("You Won!");
        } else if (userPick == 2 && random == 1){
            lblResult.setText("You Won!");
        } else if (userPick == 2 && random == 3){
            lblResult.setText("You Lose!");
        } else if(userPick == 3 && random == 1){
            lblResult.setText("You Lose!");
        } else if(userPick == 3 && random == 2){
            lblResult.setText("You Win!");
        }
    }
    
