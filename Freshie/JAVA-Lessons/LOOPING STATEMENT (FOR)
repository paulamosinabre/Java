import java.util.Scanner;
public class Looping_prac {

    public static void main(String[] args) {
        for(int i=0; i<=4; i++){ 
            for(int j=4; j>i;j--){
                System.out.print("*");
            }
        System.out.println("");
        }
    }
}

// print
     *
    **
   ***
  ****
 *****
class HelloWorld {
    public static void main(String[] args) {
     for(int i=0; i<5; i++){
         for(int j=i; j<5; j++){
             System.out.print(" ");
         }
         for(int j=0; j<=i; j++){
             System.out.print("*");
         }
         System.out.println("" );
     }
    }
}

