import java.util.Scanner;
public class MidtermPractical {
    
    static Scanner type = new Scanner(System.in);
    static String studentNumber;
    static String firstName;
    static String lastName;
    static String gender;
    static String program;
    static String section;
    
    public static void main(String[] args) {
        mains();
    }
    
    public static void mains(){
        System.out.println("[1] store your details");
        System.out.println("[2] edit your details");
        System.out.println("[3] show your details");
        System.out.println("[4] exit");
        
        System.out.println("Choose an action: ");
        char main = type.next().charAt(0);
        type.nextLine();
        toDo(main);
    }
    
    public static void toDo(char choose){
        switch(choose) {
            case '1' -> {
                System.out.println("Enter your student number: ");
                studentNumber = type.nextLine();
                
                System.out.println("Enter your first name: ");
                firstName = type.nextLine();
                
                System.out.println("Enter your last name: ");
                lastName = type.nextLine();
                
                System.out.println("Enter your gender: ");
                gender = type.nextLine();
                
                System.out.println("Enter your program: ");
                program = type.nextLine();
                
                System.out.println("Enter your section: ");
                section = type.nextLine();
                
                /*
                System.out.println("Do you wish to see your details");
                String YesorNO = type.nextLine();
                if (Yes){
                    details();
                } else {
                    type.close();
                }
                */
                mains();
            }
            
            case '2' -> {
               
                System.out.println("[1] Student number");
                System.out.println("[2] First name");
                System.out.println("[3] Last name");
                System.out.println("[4] Gender");
                System.out.println("[5] Program");
                System.out.println("[6] Section");
                System.out.println("What do you want to edit?");
                
                char changeDetails = type.next().charAt(0);
                type.nextLine();
                    switch(changeDetails){
                        case '1' -> {
                        System.out.println("Enter your student number: ");
                        studentNumber = type.nextLine();
                 
                        }
                        case'2'-> {
                        System.out.println("Enter your first name: ");
                        firstName = type.nextLine();
                        
                        }
                        case '3' -> {
                        System.out.println("Enter your last name: ");
                        lastName = type.nextLine();
                       
                        }
                        case '4'->{
                        System.out.println("Enter your gender: ");
                        gender = type.nextLine();
                        
                        }
                        case'5'-> {
                        System.out.println("Enter your program: ");
                        program = type.nextLine();
                        
                        }
                        case '6'-> {
                        System.out.println("Enter your section: ");
                        section = type.nextLine();
                        }
                    }
                mains();
                break;
            }
            case '3' -> {
                details();
                mains();
                break;
            }
            
            case '4' -> {
                type.close();
                System.exit(0);
                break;
            }
        }
    }      
    public static void details() {
        System.out.println("This account is from student number: " + studentNumber + " Who is " + firstName + " " + lastName + "\n from " + program + " section " + section);
    }
    
}
