import java.util.Scanner;
public class PracMaven {
    static int user1;
    static int user2;
    static char operators;
    
    public static void main(String[] args) {
     
        // TODO code application logic here
        // Create a calculator
        // ano yung mga kailangan sa calculator?
        // scanner isa lang tas ulit ulit
        // no looping
        // if-else
        // method for if-else
        getUser();
        getUser();
        getUser();
        
    }
    
    public static void getUser() {
        Scanner user = new Scanner(System.in);
        System.out.println("Enter the first value: ");
        user1 = user.nextInt();
            
        System.out.println("Enter the second value: ");
        user2 = user.nextInt();
            
        System.out.println("Enter the operator (+, -, *, /) : ");
        operators = user.next().charAt(0);
        
        switch (operators) {
            case '+':
                int sum = user1 + user2;
                System.out.println(user1 + " + " + user2 + " = " + sum);
                break;
            case '-':
                int subtract = user1 - user2;
                System.out.println(user1 + " - " + user2 + " = " + subtract);
                break;
            case '*':
                int times = user1 * user2;
                System.out.println(user1 + " * " + user2 + " = " + times);
                break;
            case '/':
                int divide = user1 / user2;
                System.out.println(user1 + " / " + user2 + " = " + divide);
                break;
            default:
                System.out.println("Error");
                break;
        }
    }
    
        // why is java not printing this???
        // print check
      

}
